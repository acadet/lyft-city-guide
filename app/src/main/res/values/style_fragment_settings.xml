<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentSettings" parent="MatchParent.Vertical">
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

    <style name="FragmentSettingsTitle" parent="MatchParentWrapContent">
        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FragmentSettingsSeekBar" parent="MatchParentWrapContent">
        <item name="android:layout_marginTop">@dimen/horizontal_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/horizontal_layout_margin</item>
    </style>

    <style name="FragmentSettingsSeekBarLabel" parent="HorizontalStretchable">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>