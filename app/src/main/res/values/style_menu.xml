<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Menu" parent="MatchParent">
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="MenuInnerWrapper" parent="MatchParent.Vertical">
        <item name="android:background">@color/menu_background</item>
    </style>

    <style name="MenuTitle" parent="WrapContent">
        <item name="android:padding">@dimen/layout_margin</item>

        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="MenuLabel" parent="MatchParentWrapContent">
        <item name="android:padding">@dimen/layout_margin</item>

        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>

        <item name="android:background">@color/menu_separator</item>
    </style>
</resources>