<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentHeaderMenuWrapper" parent="MatchParentWrapContent.Horizontal">
        <item name="android:layout_marginBottom">@dimen/horizontal_layout_margin</item>

        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FragmentHeaderMenuIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="FragmentHeaderAppName" parent="WrapContent">
        <item name="android:layout_marginLeft">20dp</item>

        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FragmentHeaderSlider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontSize">6sp</item>
        <item name="defaultForeground">@color/white</item>
        <item name="selectedForeground">@color/orange</item>
    </style>
</resources>