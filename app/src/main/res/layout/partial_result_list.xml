<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/MatchParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/partial_result_list_no_content_label"
        android:layout_centerInParent="true"
        android:text="@string/no_result"
        android:visibility="gone"
        style="@style/PartialResultListNoContentLabel"
        tools:visibility="visible"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/partial_result_list_wrapper"
        android:visibility="gone"
        style="@style/MatchParentWrapContent"
        tools:visibility="visible"
        >

        <ListView
            android:id="@+id/partial_result_list_listview"
            android:listSelector="@android:color/transparent"
            style="@style/MatchParentWrapContent"
            />

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>