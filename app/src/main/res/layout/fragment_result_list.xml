<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/MatchParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/fragment_result_list_no_content"
        android:layout_centerInParent="true"
        android:text="@string/no_result"
        android:visibility="gone"
        style="@style/FragmentResultListNoContent"
        tools:visibility="visible"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_result_list_wrapper"
        style="@style/MatchParentWrapContent"
        >

        <ListView
            android:id="@+id/fragment_result_list"
            style="@style/FragmentResultList"
            />

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>